<Window x:Class="FileUploaderDemo.FileUploaderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileUploaderDemo.ViewModels"
        Title="File Uploader" Width="500" Height="150">
    <Window.DataContext>
        <local:FileUploaderViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Status:" VerticalAlignment="Center" />
        <TextBlock Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Text="{Binding StatusMessage, Mode=OneWay}" />

        <TextBlock Text="Progress:" Grid.Row="1" VerticalAlignment="Center" />
        <ProgressBar Height="10" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center" Value="{Binding Progress, Mode=OneWay}" Maximum="{Binding MaxProgress, Mode=OneWay}" />

        <Button Content="Select File" Grid.Row="2" VerticalAlignment="Center" Height="20" Margin="0,0,10,0" IsEnabled="{Binding CanUpload}" Click="btnSelectFile_Click" />
        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="2" Grid.Column="1" Height="20" >
            <TextBlock VerticalAlignment="Center" IsEnabled="False" Text="{Binding FilePath, Mode=OneWay}" />
        </Border>
        <Button Content="Upload" Width="50" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Height="20" Margin="10,0,0,0" Command="{Binding UploadCommand}" CommandParameter="{Binding FilePath}" />
    </Grid>
</Window>
